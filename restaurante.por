programa
{
	funcao inicio()
	{			  
		inteiro prato
		escreva("Escolha o prato: \n 1 - Pizza \n 2 - Hamburguer \n 3 - Lasanha \n 4 - Salada")
		leia(prato)
		escolha (prato)
		{
		caso 1:		
		escreva ("Voce escolheu Pizza")
		pare

		caso 2:		
		escreva ("Voce escolheu Hamburguer")
		pare

		caso 3:		
		escreva ("Voce escolheu Lasanha")
		pare

		caso 4:		
		escreva ("Voce escolheu Salada")
		pare

		

		caso contrario:
		escreva ("opção inválida")
		}
	}
}

